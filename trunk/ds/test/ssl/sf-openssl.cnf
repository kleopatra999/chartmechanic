[ req ]
default_bits = 1024
encrypt_key = yes
distinguished_name = req_dn
x509_extensions = cert_type
prompt = no

[ req_dn ]
# country (2 letter code)
#C=FI
C=US

# State or Province Name (full name)
#ST=
ST=CA

# Locality Name (eg. city)
#L=Helsinki
L=San Francisco

# Organization (eg. company)
#O=Dovecot
O=Bay Area Software

# Organizational Unit Name (eg. section)
#OU=IMAP server
OU=Engineering

# Common Name (*.example.com is also possible)
#CN=imap.example.com
CN=sf.bayareasoftware.com

# E-mail contact
#emailAddress=postmaster@example.com
emailAddress=info@bayareasoftware.com

[ cert_type ]
nsCertType = server
